{{ page.content|raw }}
{% set testimonis = entries('sales','testimonis').where('publish',1).get() %}
<div class="mp-row-fluid motopress-row mpce-dsbl-margin-left mpce-dsbl-margin-right">
	{% for testi in testimonis %}
	<div class="mp-span4 motopress-clmn  mpce-dsbl-margin-left mpce-dsbl-margin-right">
		<div class="mp-row-fluid motopress-row mpce-dsbl-margin-left mpce-dsbl-margin-right">
			<div class="mp-span12 motopress-clmn mpce-dsbl-margin-left mpce-dsbl-margin-right">
				<div class="motopress-image-obj motopress-text-align-left">
					<img src="{{ testi.image.make().url() }}"
                        title="{{ testi.name|raw }}"
                    	class="motopress-image-obj-basic mpce-dsbl-margin-left mpce-dsbl-margin-right mpce-dsbl-margin-top mpce-dsbl-margin-bottom"/>
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
</div>