.select2-container.select2 {
  width: 100% !important;
  height: auto; }

.select2-container .select2-override {
  height: 47px;
  border-radius: 0.1rem;
  border: 1px solid rgba(0, 0, 0, .15); }

.select2-container.select2-container--focus .select2-selection--multiple {
  border-color: rgba(0, 0, 0, .15) !important; }

.select2-container .select2-option-override {
  padding: 0;
  margin: 0; }

.select2-container.select2-container--open .select2-override {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0; }

.select2-container .select2-selection.select2-selection--multiple {
  padding-top: 0;
  padding-bottom: 0; }

.select2-container .select2-selection.select2-selection--multiple .select2-selection__arrow {
  display: none; }

.select2-container .select2-selection.select2-selection--multiple .select2-selection__choice {
  border: none;
  color: #fff;
  padding: 0 15px;
  margin-top: 8px;
  padding-left: 10px;
  border-radius: 3px;
  background: #11bef6; }

.select2-container .select2-selection.select2-selection--multiple .select2-selection__choice span {
  color: #fff;
  line-height: 29px;
  margin-right: 5px; }

.select2-container .select2-selection.select2-selection--multiple .select2-selection__rendered {
  padding: 0;
  height: 100%;
  line-height: 26px; }

.select2-container .select2-selection.select2-selection--multiple .select2-search--inline .select2-search__field {
  margin-top: 10px; }

.select2-container .select2-dropdown {
  border-color: rgba(0, 0, 0, .15); }

.select2-container .select2-dropdown .select2-search__field {
  border: 1px solid rgba(0, 0, 0, .15); }

.select2-container .select2-dropdown .select2-results .select2-results__option--highlighted {
  background-color: #373a3c; }
